<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.sergioaraya.pruebagolabs.PersonInfo"
    android:layout_marginLeft="@dimen/margin_left"
    android:layout_marginRight="@dimen/margin_right">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Person Info"
        android:id="@+id/title"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:layout_below="@+id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/person_info_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/person_info_email" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_address"
        android:textSize="20sp"
        android:text="Address"
        android:layout_below="@id/header"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Street"
        android:textAlignment="center"
        android:layout_below="@id/title_address"
        android:id="@+id/address_street"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Suite"
        android:textAlignment="center"
        android:layout_below="@id/address_street"
        android:id="@+id/address_suite"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="City"
        android:textAlignment="center"
        android:layout_below="@+id/address_suite"
        android:id="@+id/address_city"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company"
        android:id="@+id/title_company"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_below="@id/address_city"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/person_info_company_name"
        android:textAlignment="center"
        android:layout_below="@+id/title_company" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/person_info_bs"
        android:textAlignment="center"
        android:layout_below="@id/person_info_company_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/person_info_catchphrase"
        android:textAlignment="center"
        android:layout_below="@+id/person_info_bs"
        />



</RelativeLayout>
